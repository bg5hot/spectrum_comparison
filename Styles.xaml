<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Fluent Design Colors -->
    <Color x:Key="FluentBlue">#0078D4</Color>
    <Color x:Key="FluentLightBlue">#009FAA</Color>
    <Color x:Key="FluentOrange">#FF6B00</Color>
    <Color x:Key="FluentBackground">#F9F9F9</Color>
    <Color x:Key="FluentCardBackground">#FFFFFF</Color>
    <Color x:Key="FluentBorder">#E0E0E0</Color>
    <Color x:Key="FluentText">#323130</Color>
    <Color x:Key="FluentSecondaryText">#605E5C</Color>

    <SolidColorBrush x:Key="FluentBlueBrush" Color="{StaticResource FluentBlue}"/>
    <SolidColorBrush x:Key="FluentLightBlueBrush" Color="{StaticResource FluentLightBlue}"/>
    <SolidColorBrush x:Key="FluentOrangeBrush" Color="{StaticResource FluentOrange}"/>
    <SolidColorBrush x:Key="FluentBackgroundBrush" Color="{StaticResource FluentBackground}"/>
    <SolidColorBrush x:Key="FluentCardBackgroundBrush" Color="{StaticResource FluentCardBackground}"/>
    <SolidColorBrush x:Key="FluentBorderBrush" Color="{StaticResource FluentBorder}"/>
    <SolidColorBrush x:Key="FluentTextBrush" Color="{StaticResource FluentText}"/>
    <SolidColorBrush x:Key="FluentSecondaryTextBrush" Color="{StaticResource FluentSecondaryText}"/>

    <!-- Card Style -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FluentCardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.1" Color="Black"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Section Title Style -->
    <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource FluentTextBrush}"/>
        <Setter Property="Margin" Value="0,10,0,8"/>
    </Style>

    <!-- Label Style -->
    <Style x:Key="LabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource FluentSecondaryTextBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <!-- Strong Label Style -->
    <Style x:Key="StrongLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource FluentTextBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Primary Button Style -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource FluentBlueBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#106EBE"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ComboBox Style -->
    <Style x:Key="FluentComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Height" Value="32"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentBorderBrush}"/>
        <Setter Property="Background" Value="White"/>
    </Style>

    <!-- NumericUpDown Style (TextBox) -->
    <Style x:Key="FluentNumericStyle" TargetType="TextBox">
        <Setter Property="Height" Value="32"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="BorderBrush" Value="{StaticResource FluentBorderBrush}"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="8,0"/>
    </Style>

    <!-- Separator Style -->
    <Style x:Key="SeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource FluentBorderBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,10"/>
    </Style>

</ResourceDictionary>
