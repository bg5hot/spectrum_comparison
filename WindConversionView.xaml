<UserControl x:Class="SpectrumComparison.WindConversionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpectrumComparison"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1200">

    <UserControl.DataContext>
        <local:WindConversionViewModel/>
    </UserControl.DataContext>

    <Grid Background="{StaticResource FluentBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="16">
            <StackPanel MaxWidth="800" HorizontalAlignment="Left">
                <TextBlock Text="风速转换 (ASCE7 -> GB50009)" Style="{StaticResource SectionTitleStyle}"/>
                
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <!-- 风速值和单位 -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="风速:" Style="{StaticResource LabelStyle}" Grid.Column="0"/>
                            <TextBox Text="{Binding WindSpeed, StringFormat=F0}" Style="{StaticResource FluentNumericStyle}" Grid.Column="1" Margin="0,0,8,0"/>
                            <ComboBox ItemsSource="{Binding WindUnitOptions}" SelectedItem="{Binding WindUnit}" 
                                      Style="{StaticResource FluentComboBoxStyle}" Grid.Column="2" Width="80"/>
                        </Grid>

                        <!-- 测量高度 -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="测量高度 (m):" Style="{StaticResource LabelStyle}" Grid.Column="0"/>
                            <TextBox Text="{Binding WindHeight, StringFormat=F0}" Style="{StaticResource FluentNumericStyle}" Grid.Column="1"/>
                        </Grid>

                        <!-- 测量时距 -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="测量时距:" Style="{StaticResource LabelStyle}" Grid.Column="0"/>
                            <ComboBox ItemsSource="{Binding WindTimeOptions}" SelectedItem="{Binding WindTime}" 
                                      Style="{StaticResource FluentComboBoxStyle}" Grid.Column="1"/>
                        </Grid>

                        <!-- 重现期 -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="重现期:" Style="{StaticResource LabelStyle}" Grid.Column="0"/>
                            <ComboBox ItemsSource="{Binding ReturnPeriodOptions}" SelectedItem="{Binding ReturnPeriod}" 
                                      Style="{StaticResource FluentComboBoxStyle}" Grid.Column="1"/>
                        </Grid>

                        <!-- 转换按钮 -->
                        <Button Content="执行转换" Command="{Binding ConvertCommand}" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,16"/>

                        <Separator Style="{StaticResource SeparatorStyle}"/>

                        <!-- 输出结果 -->
                        <TextBlock Text="转换结果" Style="{StaticResource StrongLabelStyle}" FontSize="14" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="{Binding ResultWindSpeed}" Style="{StaticResource LabelStyle}" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding ResultWindPressure}" Style="{StaticResource StrongLabelStyle}" FontSize="14" Margin="0,0,0,16"/>

                        <!-- 转换过程 -->
                        <TextBlock Text="转换过程:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                        <Border Background="#F5F5F5" BorderBrush="{StaticResource FluentBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="12">
                            <TextBox Text="{Binding ProcessText}" 
                                     IsReadOnly="True" 
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="150"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     VerticalScrollBarVisibility="Auto"/>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
