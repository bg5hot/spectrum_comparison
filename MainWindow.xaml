<Window x:Class="SpectrumComparison.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpectrumComparison"
        mc:Ignorable="d"
        Title="中美规范主要参数转换" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource FluentBackgroundBrush}">

    <Window.Resources>
        <DataTemplate x:Key="SpectrumViewTemplate">
            <local:SpectrumView/>
        </DataTemplate>
        <DataTemplate x:Key="WindConversionViewTemplate">
            <local:WindConversionView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <Border Grid.Column="0" Width="200" Background="White" BorderBrush="{StaticResource FluentBorderBrush}" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="中美规范转换" FontSize="18" FontWeight="Bold" Margin="16,20,16,10" Foreground="{StaticResource FluentTextBrush}"/>
                <Separator Margin="16,0"/>

                <!-- Navigation Items -->
                <Button x:Name="btnSpectrum" Click="BtnSpectrum_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                        HorizontalContentAlignment="Left" Padding="16,12" Margin="8,8,8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,12,0" Foreground="{StaticResource FluentBlueBrush}"/>
                        <TextBlock Text="反应谱比较" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnWind" Click="BtnWind_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                        HorizontalContentAlignment="Left" Padding="16,12" Margin="8,4,8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE753;" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,12,0" Foreground="{StaticResource FluentBlueBrush}"/>
                        <TextBlock Text="风速转换" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Column="1" x:Name="contentControl" ContentTemplate="{StaticResource SpectrumViewTemplate}">
            <local:SpectrumView/>
        </ContentControl>
    </Grid>
</Window>
